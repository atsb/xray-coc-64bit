[logic]
active = ph_button@wait

[ph_button@wait] 
anim = idle
on_press = ph_idle@elevator_off %=anim_obj_forward(pas_b400_door_downstairs) =heal_squad(pas_b400_stalkers_squad) +pas_b400_downstairs_button_pressed -pas_b400_about_gates%
